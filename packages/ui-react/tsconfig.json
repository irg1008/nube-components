{
  "extends": "tsconfig/react/react-base.json",
  "include": ["src"],
  "compilerOptions": {
    "baseUrl": "src",
    "paths": {
      "@/*": ["components/*"]
    },
    "outDir": "dist",
    "allowJs": true,
    "typeRoots": ["node_modules/@types", "src/**/types"]
  },
  "exclude": ["dist", "node_modules"]
}
